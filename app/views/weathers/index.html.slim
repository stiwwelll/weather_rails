                  | 23
                  sup> o
                  | C
                small
                  | 18
                  sup o
            .forecast
              .forecast-header
                .day Friday
              /! .forecast-header
              .forecast-content
                .forecast-icon
                  = image_tag("/assets/icons/icon-12.svg", width: "48")
                .degree
                  | 23
                  sup> o
                  | C
                small
                  | 18
                  sup o
            .forecast
              .forecast-header
                .day Saturday
              /! .forecast-header
              .forecast-content
